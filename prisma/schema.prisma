// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  email     String     @unique
  hash      String
  username  String?
  Bookmarks Bookmark[] @relation(name: "bookmark")
  Chat      Chat[]
  Message   Message[]

  @@map("users")
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  desc      String?
  link      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], name: "bookmark")

  @@map("bookmarks")
}

model Chat {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants User[]
  messages     Message[]

  @@map("chats")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sender   User @relation(fields: [senderId], references: [id])
  senderId Int

  chat   Chat @relation(fields: [chatId], references: [id])
  chatId Int

  @@map("messages")
}
